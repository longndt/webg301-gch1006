{% extends 'base.html.twig' %}

{% block title %}Laptop{% endblock %}

{% block body %}
    <h1>Laptop</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ laptop.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ laptop.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ laptop.image }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ laptop.date ? laptop.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Bestseller</th>
                <td>{{ laptop.bestseller ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_laptop_index') }}">back to list</a>

    <a href="{{ path('app_laptop_edit', {'id': laptop.id}) }}">edit</a>

    {{ include('laptop/_delete_form.html.twig') }}
{% endblock %}
