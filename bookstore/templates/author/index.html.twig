{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3">
            <h1 class="text text-primary">Author List</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('author_add') }}">
                <img src="{{ asset('images/buttons/add.png') }}" width="40" height="40">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-success">Author Id</th>
        <th class="text text-success">Author Name</th>
        <th class="text text-success">Author Image</th>
        <th class="text text-success">Actions</th>
    </tr>
    {% for author in authors %}
        <tr>
            <td>{{ author.id }}</td>
            <td>{{ author.name }}</td>
            <td>
                <a class="text-decoration-none" href="{{ path('author_detail', {'id' : author.id }) }}">
                    <img src="{{ author.image }}" width="100" height="100">
                </a>
           </td>
            <td>
                <a class="text-decoration-none" href="{{ path('author_detail', {'id' : author.id }) }}">
                    <img src="{{ asset('images/buttons/detail.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('author_edit', {'id' : author.id }) }}">
                    <img src="{{ asset('images/buttons/edit.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('author_delete', {'id' : author.id }) }}"
                onclick="return confirm('Are you sure to delete this author ?');"
                >
                    <img src="{{ asset('images/buttons/delete.png') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
{% endblock %}